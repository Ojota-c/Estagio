def verificar_letra_a(string):
    # Contando quantas vezes 'a' ou 'A' aparecem na string
    count_a = string.lower().count('a')
    
    if count_a > 0:
        return f"A letra 'a' aparece {count_a} vezes na string."
    else:
        return "A letra 'a' não foi encontrada na string."

# Testando com uma string definida
string_informada = "Amazônia é uma área impressionante!"
resultado = verificar_letra_a(string_informada)
resultado
"A letra 'a' aparece 6 vezes na string."
